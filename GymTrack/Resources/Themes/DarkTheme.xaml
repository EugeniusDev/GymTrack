    <SolidColorBrush x:Key="MW_ListItemButtonBackground" Color="#aacade"/>
    <SolidColorBrush x:Key="MW_ListItemButtonForeground" Color="#115511"/>

    <!-- AccountSettingsWindow specific brushes -->
    <SolidColorBrush x:Key="AccSW_TextBoxBackground" Color="#334455"/>
    <SolidColorBrush x:Key="AccSW_TextBoxForeground" Color="Wheat"/>
    <SolidColorBrush x:Key="AccSW_DayoffButtonSelectedBackground" Color="LightGreen"/>
    <SolidColorBrush x:Key="AccSW_DayoffButtonDefaultBackground" Color="#005555"/>
    <SolidColorBrush x:Key="AccSW_DayoffButtonForeground" Color="White"/>

    <!-- TrainingWindow specific brushes -->
    <SolidColorBrush x:Key="TW_InactiveElementColor" Color="Transparent"/>
    <SolidColorBrush x:Key="TW_ActiveElementBorderBrush" Color="#113366"/>
    <SolidColorBrush x:Key="TW_ActiveTextboxBackground" Color="#112299"/>
    <SolidColorBrush x:Key="TW_NewExerciseButtonBackground" Color="#457845"/>
    <SolidColorBrush x:Key="TW_NewExerciseButtonForeground" Color="LightGray"/>
