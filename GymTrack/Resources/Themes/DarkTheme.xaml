<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Universal color brushes -->
    <SolidColorBrush x:Key="WindowBackground" Color="#212121"/>
    <SolidColorBrush x:Key="HeaderText" Color="#eeeeee"/>
    <SolidColorBrush x:Key="SubHeaderForeground" Color="#cacdff"/>
    <SolidColorBrush x:Key="ListViewBackground" Color="#021323"/>
    <SolidColorBrush x:Key="ListViewForeground" Color="#acacac"/>
    <SolidColorBrush x:Key="ListItemBackground" Color="#122245"/>
    <SolidColorBrush x:Key="ListItemTitleForeground" Color="#2462f9"/>
    <SolidColorBrush x:Key="ListItemDetailsForeground" Color="#cdcdcd"/>
    <SolidColorBrush x:Key="MainMenuButtonBackground" Color="#004477"/>
    <SolidColorBrush x:Key="MainMenuButtonForeground" Color="White"/>
    <SolidColorBrush x:Key="EditButtonBackground" Color="#eeddff"/>
    <SolidColorBrush x:Key="EditButtonForeground" Color="#001122"/>

    <!-- Settings windows color brushes -->
    <SolidColorBrush x:Key="SettingsWindows_TextBlockForeground" Color="#aaccff"/>
    <SolidColorBrush x:Key="SettingsWindows_ImportButtonBackground" Color="#5599aa"/>
    <SolidColorBrush x:Key="SettingsWindows_ImportButtonForeground" Color="White"/>
    <SolidColorBrush x:Key="SettingsWindows_ExportButtonBackground" Color="#4477aa"/>
    <SolidColorBrush x:Key="SettingsWindows_ExportButtonForeground" Color="White"/>

    <!-- MainWindow specific brushes -->
    <SolidColorBrush x:Key="MW_ButtonBackground" Color="#444144"/>
